---
interface Props {
  link: string;
  name: string;
  icon: string;
}

const { link, name, icon } = Astro.props;
import { Icon } from "astro-icon/components";
import { string } from "astro/zod";
---

<a
  class='relative inline-block w-full bg-background text-white p-3 text-center rounded-full'
  href={link}
  ><span
    class='absolute left-2 top-2 size-8 rounded-full bg-accent text-black flex items-center justify-center'
    ><Icon name={icon} size={30} /></span
  >
  {name}</a
>
