---
import SubtitleLine from "../components/SubtitleLine.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title='Kontakt'>
  <div class='container w-full pt-48 px-4'>
    <SubtitleLine subTitle='Kontakt' />
    <form class='p-8 bg-background_light rounded-2xl text-black'>
      <h2 class='mb-8'>Get in touch</h2>
      <div class='flex flex-wrap -mx-3 mb-6'>
        <div class='w-full md:w-1/2 px-3 mb-6'>
          <label class='block text-sm font-bold mb-2' for='name'>Name:</label>
          <input
            type='text'
            id='name'
            name='name'
            class='bg-background_light border border-gray-300 rounded-xl p-2 w-full'
            required
          />
        </div>
        <div class='w-full md:w-1/2 px-3 mb-6'>
          <label class='block text-sm font-bold mb-2' for='email'>Email:</label>
          <input
            type='email'
            id='email'
            name='email'
            class='bg-background_light border border-gray-300 rounded-xl p-2 w-full'
            required
          />
        </div>
      </div>
      <label class='block text-sm font-bold mb-2' for='message'>Message:</label>
      <textarea
        class='bg-background_light border border-gray-300 rounded-xl p-2 w-full mb-6'
        id='message'
        name='message'
        rows='5'></textarea>
      <button
        class='bg-background text-white hover:bg-accent hover:text-black font-bold py-2 px-4 rounded-xl'
        >Send</button
      >
    </form>
  </div>
</Layout>
